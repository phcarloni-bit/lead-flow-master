{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/plugins/raw/main/plugins/postgresql.json"
    },
    {
      "source": "https://github.com/railwayapp/plugins/raw/main/plugins/redis.json"
    }
  ]
}
